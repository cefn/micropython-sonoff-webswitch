# see http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html,css,js}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = false

[*.py]
line_length = 100

[{Makefile,**.mk}]
indent_style = tab
trim_trailing_whitespace = true
insert_final_newline = false

[*.{yml}]
indent_style = space
indent_size = 2
